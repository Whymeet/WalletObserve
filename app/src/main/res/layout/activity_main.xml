<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Баланс: 0"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Доходы: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Расходы: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
        android:id="@+id/listViewOperations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewExpense"
        app:layout_constraintBottom_toTopOf="@id/buttonAddOperation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonAddOperation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#130A0A"

        android:outlineSpotShadowColor="#884D4D"
        android:shadowColor="#150F0F"
        android:text="Добавить операцию"
        android:textColor="@color/white"
        android:textColorHighlight="#421E1E"
        android:textColorHint="#7E1F1F"
        android:textColorLink="#150A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#422727"
        app:strokeColor="#552323" />
</androidx.constraintlayout.widget.ConstraintLayout>
